---
import {
  SignedIn,
  SignedOut,
  UserButton,
  SignInButton,
} from "@clerk/astro/components";
---

<style>
  @import url("https://fonts.googleapis.com/css2?family=Dancing+Script:wght@400..700&display=swap");
</style>

<style>
  .lottie-icon {
    width: 150px;
    height: 150px;
  }

  /* Animación personalizada de fade out up y fade in up - UNA SOLA VEZ */
  .hover-fade-cycle {
    position: relative;
    transition:
      opacity 0.15s ease-out,
      transform 0.15s ease-out;
    /* Evita falsos toques con un área de padding invisible */
    padding: 2px;
  }

  .hover-fade-cycle:hover {
    animation: fadeOutUpIn 0.5s cubic-bezier(0.4, 0, 0.2, 1) forwards;
  }

  @keyframes fadeOutUpIn {
    0% {
      opacity: 1;
      transform: translateY(0) scale(1);
    }
    20% {
      opacity: 0.8;
      transform: translateY(-3px) scale(0.99);
    }
    35% {
      opacity: 0.4;
      transform: translateY(-8px) scale(0.97);
    }
    50% {
      opacity: 0;
      transform: translateY(-12px) scale(0.95);
    }
    65% {
      opacity: 0.4;
      transform: translateY(5px) scale(0.97);
    }
    80% {
      opacity: 0.8;
      transform: translateY(2px) scale(0.99);
    }
    100% {
      opacity: 1;
      transform: translateY(0) scale(1);
    }
  }

  /* Mejoras de rendimiento y suavidad */
  .hover-fade-cycle {
    will-change: transform, opacity;
    backface-visibility: hidden;
    perspective: 1000px;
    /* Evita parpadeos */
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
  }

  /* Evita conflictos con otras animaciones */
  .hover-fade-cycle.animate-fade-in-down {
    animation-fill-mode: both;
  }

  /* Transición suave al salir del hover */
  .hover-fade-cycle:not(:hover) {
    transition: all 0.2s ease-out;
  }
</style>

<header class="animate-fade-in-down animate-duration-950 animate-delay-300">
  <nav class="w-full py-4 px-6 md:px-10">
    <div class="container mx-auto flex justify-between items-center">
      <!-- Logo con animación hover -->
      <a
        href="/"
        class="font-logo text-3xl leading-none text-stone-800 animate-fade-in-down animate-duration-950 animate-delay-300"
      >
        BA<br /> Atelier
      </a>

      <!-- Lottie Animation con animación hover -->
      <a
        id="lottie-container"
        href="/"
        class="lottie-icon opacity-80 mt-2.5 animate-fade-in-down animate-duration-950 animate-delay-300"
      >
        <img
          src="/icons/icon.png"
          alt="icon"
          class="w-full h-full object-cover border-orange-300 border-3 rounded-full backdrop-opacity-80"
        />
      </a>

      <!-- Navegación -->
      <div class="flex items-center space-x-8">
        <a
          href="#"
          class="text-black hover:text-stone-800 transition-colors duration-300 font-medium text-lg absolute right-15 top-21 group inline-block group h-6 overflow-hidden margin-top-[-0.5rem]"
        >
          <!-- Texto "Menu" por defecto -->
          <span
            class="group-hover:opacity-0 group-hover:animate-fade-out-up transition-opacity duration-30"
          >
            Menú
          </span>

          <!-- Texto "Inicio" al hacer hover -->
          <span
            class="absolute left-0 top-0 opacity-0 group-hover:opacity-100 group-hover:animate-fade-in-up transition-opacity duration-300"
          >
            Menú
          </span>
        </a>

        <div class="absolute right-15 top-21 group">
          <SignedIn>
            {/* Botón visible por defecto, se desvanece al hacer hover */}
            <div class="absolute left-0 top-0 group-hover:animate-fade-out-up">
              <UserButton />
            </div>

            {/* Botón que aparece con animación al hacer hover */}
            <div
              class="absolute left-0 top-0 opacity-0 group-hover:opacity-100 group-hover:animate-fade-in-up"
            >
              <UserButton />
            </div>
          </SignedIn>
        </div>

        <SignedOut>
          <SignInButton
            mode="modal"
            class="text-stone-800 hover:text-stone-600 transition-colors duration-300 font-medium text-lg animation-fade-in-up"
            style="animation-delay: 2s;"
          />
        </SignedOut>
      </div>
    </div>
  </nav>
</header>
