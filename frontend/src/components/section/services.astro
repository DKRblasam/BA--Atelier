---
import ServiceItem from "@itm/ServiceItem.astro";

const services = [
  {
    title: "Diseño de Alta Costura",
    description:
      "Colecciones personalizadas y prendas únicas creadas para clientes exigentes con los más finos materiales.",
    image: "https://images.unsplash.com/photo-1562347174-7370ad83dc47",
    icon: "/icons/needle.svg",
  },
  {
    title: "Consultoría de Moda",
    description:
      "Asesoramiento personalizado sobre tendencias, estilo y adaptación de looks a medida de cada cliente.",
    image: "https://plus.unsplash.com/premium_photo-1683133809575-4a80754b82ee",
    icon: "/icons/user.svg",
  },
  {
    title: "Arreglos y Transformaciones",
    description:
      "Servicio especializado en la adaptación y modificación de prendas existentes con ajuste perfecto.",
    image: "https://images.unsplash.com/photo-1742674537189-415cfb85ce05",
    icon: "/icons/scissors.svg",
  },
  {
    title: "Eventos Exclusivos",
    description:
      "Participación en desfiles, presentaciones y eventos privados de moda para una experiencia única.",
    image: "https://images.unsplash.com/photo-1558545539-2fae21eb1116",
    icon: "/icons/calendar.svg",
  },
];
---

<section id="services" class="py-20 bg-[#ffffff62] background-blur">
  <div class="text-center mb-12 m-auto w-max">
    <h2 class="text-4xl font-bold text-lime-600">Nuestros Servicios</h2>
    <p class="mt-4 text-neutral-500 max-w-2xl m-auto">
      Ofrecemos servicios exclusivos de alta costura, desde diseños
      personalizados hasta consultoría especializada
    </p>
  </div>

  <div
    class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 px-6 max-w-7xl mx-auto"
  >
    {services.map((service) => <ServiceItem {...service} />)}
  </div>

  <div class="text-center mt-10">
    <a href="wa.me/4423119381" class="text-lime-600 font-medium hover:underline">
      Solicitar Consulta Gratuita
    </a>
  </div>
</section>
