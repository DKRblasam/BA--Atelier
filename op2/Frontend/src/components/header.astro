---
const navItems = [
  { name: "Inicio", href: "#home" },
  { name: "Servicios", href: "#services" },
  { name: "Galer√≠a", href: "#gallery" },
  { name: "Sobre Nosotros", href: "#about" },
  { name: "Contacto", href: "#contact" },
];
---

<header
  id="header"
  class="fixed top-0 left-0 right-0 z-50 transition-all duration-500 bg-transparent"
>
  <div class="container mx-auto px-6 py-6">
    <div class="flex items-center justify-between">
      <!-- Logo with Icon -->
      <div class="flex items-center space-x-3 animate-fade-in">
        <div class="relative">
          <svg
            class="w-8 h-8 text-accent-brown transform rotate-45"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M14.828 14.828a4 4 0 01-5.656 0M9 10h1m4 0h1m-6 4h.01M15 14h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
            ></path>
          </svg>
          <div
            class="absolute -top-1 -right-1 w-3 h-3 bg-accent-brown/20 rounded-full animate-pulse"
          >
          </div>
        </div>
        <h1 class="font-dancing text-4xl font-semibold text-warm-brown">
          BA <span class="text-accent-brown">Atelier</span>
        </h1>
      </div>

      <!-- Desktop Navigation -->
      <nav class="hidden md:flex space-x-12 animate-slide-in-right">
        {
          navItems.map((item) => (
            <a
              href={item.href}
              class="text-warm-brown hover:text-accent-brown transition-all duration-300 font-medium relative group text-lg hover:animate-[float-up-infinite_1.5s_ease-in-out_infinite]"
            >
              {item.name}
              <span class="absolute bottom-0 left-0 w-0 h-0.5 bg-accent-brown transition-all duration-300 group-hover:w-full rounded-full" />
            </a>
          ))
        }
      </nav>

      <!-- Mobile Menu Button -->
      <button
        id="mobile-menu-btn"
        class="md:hidden text-warm-brown hover:text-accent-brown transition-colors duration-300"
      >
        <svg
          id="menu-icon"
          class="w-6 h-6"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
        <svg
          id="close-icon"
          class="w-6 h-6 hidden"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M6 18L18 6M6 6l12 12"></path>
        </svg>
      </button>
    </div>

    <!-- Mobile Navigation -->
    <nav
      id="mobile-menu"
      class="md:hidden mt-6 pb-6 border-t border-neutral-200 pt-6 animate-fade-in-up hidden"
    >
      {
        navItems.map((item) => (
          <a
            href={item.href}
            class="block py-3 text-warm-brown hover:text-accent-brown transition-colors duration-300 text-lg hover:animate-[float-up-infinite_1.5s_ease-in-out_infinite] mobile-nav-link"
          >
            {item.name}
          </a>
        ))
      }
    </nav>
  </div>
</header>

<script>
  // Header scroll effect
  function handleScroll() {
    const header = document.getElementById("header");
    if (window.scrollY > 50) {
      header?.classList.add(
        "bg-white/95",
        "backdrop-blur-md",
        "shadow-sm",
        "border-b",
        "border-neutral-100"
      );
      header?.classList.remove("bg-transparent");
    } else {
      header?.classList.remove(
        "bg-white/95",
        "backdrop-blur-md",
        "shadow-sm",
        "border-b",
        "border-neutral-100"
      );
      header?.classList.add("bg-transparent");
    }
  }

  // Mobile menu toggle
  function setupMobileMenu() {
    const mobileMenuBtn = document.getElementById("mobile-menu-btn");
    const mobileMenu = document.getElementById("mobile-menu");
    const menuIcon = document.getElementById("menu-icon");
    const closeIcon = document.getElementById("close-icon");
    const mobileNavLinks = document.querySelectorAll(".mobile-nav-link");

    let isOpen = false;

    mobileMenuBtn?.addEventListener("click", () => {
      isOpen = !isOpen;

      if (isOpen) {
        mobileMenu?.classList.remove("hidden");
        menuIcon?.classList.add("hidden");
        closeIcon?.classList.remove("hidden");
      } else {
        mobileMenu?.classList.add("hidden");
        menuIcon?.classList.remove("hidden");
        closeIcon?.classList.add("hidden");
      }
    });

    // Close mobile menu when clicking on a link
    mobileNavLinks.forEach((link) => {
      link.addEventListener("click", () => {
        isOpen = false;
        mobileMenu?.classList.add("hidden");
        menuIcon?.classList.remove("hidden");
        closeIcon?.classList.add("hidden");
      });
    });
  }

  // Initialize
  document.addEventListener("DOMContentLoaded", () => {
    handleScroll();
    setupMobileMenu();
    window.addEventListener("scroll", handleScroll);
  });
</script>
