---
import SiteLayout from "@cmp/sitelay.astro";
import {
  SignedIn,
  SignedOut,
  UserButton,
  SignInButton,
} from "@clerk/astro/components";
---

<style>
  .lottie-icon {
    width: 150px;
    height: 150px;
  }
</style>

<header class="animate-fade-in-down animate-duration-950 animate-delay-300">
  <nav class="w-full py-4 px-6 md:px-10">
    <div class="container mx-auto flex justify-between items-center">
      <!-- Logo -->
      <a href="/" class="font-logo text-3xl leading-none text-stone-800">
        BA<br /> Atelier
      </a>

      <!-- Lottie Animation -->
      <a id="lottie-container" href="/" class="lottie-icon opacity-80 mt-2.5">
        <img
          src="/icons/icon.png"
          alt="icon"
          class="w-full h-full object-cover border-orange-300 border-3 rounded-full backdrop-opacity-80"
        />
      </a>

      <!-- NavegaciÃ³n -->
      <div class="flex items-center space-x-8">
        <a
          href="#"
          class="text-stone-800 hover:text-stone-600 transition-colors duration-300 font-medium text-lg animate-rise"
        >
          Menu
        </a>

        <SignedIn>
          <UserButton />
        </SignedIn>

        <SignedOut>
          <SignInButton
            mode="modal"
            class="text-stone-800 hover:text-stone-600 transition-colors duration-300 font-medium text-lg animate-rise"
            style="animation-delay: 2s;"
          />
        </SignedOut>
      </div>
    </div>
  </nav>
</header>
